<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tipsImage"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/thumbnail_height"
            android:contentDescription="TODO"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tipTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Recipe Title"
            android:textAlignment="center"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tip_instructionsTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/instructions"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tip_instructionsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="[Instructions text here]" />

        <TextView
            android:id="@+id/tip_sourceTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Source"
            android:textColor="?attr/colorPrimaryVariant"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tip_sourceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="[Source]" />
    </LinearLayout>

</FrameLayout>